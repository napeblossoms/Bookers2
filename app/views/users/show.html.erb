<!--ユーザーの詳細-->
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name <%= @user.name %></p>
  <p>introduction <%= @user.introduction %></p>

<h1>New book</h1>
 <%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  </br>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>

<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Opinion</th>
   <th></th>
  </tr>
 </thead>
 <% @books.each do |book| %>
 <tbody>
  <tr>
   <td class="a"><%= link_to "Title", "/books/#{book.id}" %></td>
   <td class="b"><%= book.body %></td>
  </tr>
 </tbody>

<% end %>
</table>



