<h1>Editing Book</h1>
 <%= form_with model: @book do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Opinion</h5>
  <%= f.text_area :opinion %>
  </br>
  <%= f.submit 'Update Book' %>
  </br>
  <%= link_to "Show", books_path(@book.id) %>
  <%= link_to "Back", books_path %>


 <% end %>
