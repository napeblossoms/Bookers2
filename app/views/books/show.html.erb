<%= render 'list', book: @book %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td><a href="/users/#{user.id}">
        <%= image_tag @book.user.get_profile_image(100,100) %></a>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book),class:"btn btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book),method: :delete,class:"btn btn-sm btn-danger" %></td>
      </tr>
    </tbody>
  </table>
</div>
